    <div class="panel-body">
        <!-- Search form -->
        <div class="row">
            <!-------------------------------------------------------- INSERT ---------------------------------------------------------->
            <div class="col-lg-1">
                <a asp-controller="WareHousing" asp-action="Create" method="get">
                    <button class="btn btn-primary" data-toggle="modal" data-target="#">Thêm</button>
                    </a>
            </div>
            <!-------------------------------------------------------- SEARCH CATEGORY ---------------------------------------------------------->
