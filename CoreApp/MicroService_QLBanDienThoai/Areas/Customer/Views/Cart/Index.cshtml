                        alert("Cập nhập thành công")
                        location.href = "@Url.Action("Index", "Cart")";
                    }
                },
                error: function (data) {
                    alert("Error: " + data);
                }
            })
        }
        else {
            var data = {
                id: pid,
                quantity: parseInt(new_quan) - parseInt(old_quan)
            }
            $.ajax({
                url: "/Customer/SanPham/AddCart",
                type: "post",
